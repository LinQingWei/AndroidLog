<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="5dp"
                  android:orientation="horizontal">
        <ImageButton android:id="@+id/log__sqlite_verbose"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:src="@drawable/log__verbose_selector" />
        <ImageButton android:id="@+id/log__sqlite_debug"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:src="@drawable/log__debug_selector" />
        <ImageButton android:id="@+id/log__sqlite_info"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:src="@drawable/log__info_selector" />
        <ImageButton android:id="@+id/log__sqlite_warn"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:src="@drawable/log__warn_selector" />
        <ImageButton android:id="@+id/log__sqlite_error"
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:src="@drawable/log__error_selector" />
    </LinearLayout>

    <ScrollView android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        <TextView android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:textColor="@android:color/white"
                  android:textSize="14sp"
                  android:id="@+id/log__sqlite_log" />
    </ScrollView>

</LinearLayout>